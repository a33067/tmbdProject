{{#> layout}}
    <div class="container">
        <div class="row">
            <div class="col-md-12"></div>
        </div>
            <div class="row">
                <div class="col-md-4">
                    <img src="https://image.tmdb.org/t/p/w185{{poster_path}}">
                </div>
                <div class="col-md-6">
                    <h3> {{movieName}}</h3>
                    {{#each directors}}<p> Director: {{directorName}}</p>{{/each}}
                    <p>Overview: {{overview}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Actor Name</th>
                                <th>Characther</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each actors}}
                            <tr>
                                <td><a href="/actors/{{actorId}}">{{actorName}}</a></td>
                                <td>{{actorCharacter}}</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{#if user}}
                    <div class="col-md-7" id="comments">
                        <form onsubmit="return addComments(this)">
                                <div class="detailBox">
                                    <label>Comment Box</label>
                                    <div class="actionBox">
                                        <ul class="commentList">
                                            <li class="comments">
                                                {{#each comments}}
                                                    <div class="commenterImage">
                                                        <h6>Comment post by: {{user.username}}</h6>
                                                    </div>
                                                    <div class="commentText">
                                                        <p>{{comment}}</p>
                                                    </div>
                                                    {{#each response}}
                                                        <div class="commenterImage">
                                                            <h6>Comment post by: {{user.username}}</h6>
                                                        </div>
                                                        <div class="commentText">
                                                            <p>{{comment}}</p>
                                                        </div>
                                                    {{/each}}
                                                {{/each}}
                                            </li>
                                    
                                        </ul>
                                        <form class="form-inline" role="form">
                                            <div class="form-group">
                                                <input class="form-control" type="text" placeholder="Your comments" id="comment"/>
                                                <input type="hidden" value="{{movieId}}"  id="movieId">
                                                <input type="hidden" value="{{commentId}}"  id="commentId">
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-default">Replay</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>  
                        </form>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
{{/layout}}