{{#> layout}}
<form action="/users/favourites/add" method="POST">
    <div class="container">
        <div>
        <h3>Search Results:</h3>
        {{#if user}}
            <button type="submit" class="btn btn-default btn-sm" >
                    <span class="glyphicon glyphicon-plus"></span> Add Favourites
            </button>
            <input type="text" id="favouritListName" name="favouritListName">
        {{/if}}
        </div>

        {{#each results}}
            <div class="h-100 d-inline-block"> {{log movieId}}
                <a href="/movies/{{movieId}}" data-toggle="tooltip" title="{{movieName}}">
                    {{#if moviePosterPath}}
                        <img src="https://image.tmdb.org/t/p/w185{{moviePosterPath}}" class="search">
                    {{else}}
                        <img src="/images/defaultPosterPath.jpg" class="search">
                    {{/if}}
                </a>
                {{#if ../user}}
                
                    <input type="checkbox" name="favourites" value='{"id":"{{movieId}}","movie":"{{movieName}}"}' />
                {{/if}}
            </div>
        {{/each}} 
    </div>
</form>

{{/layout}}